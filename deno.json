{
  "name": "scaffold.github.io",
  "lock": false,
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns",
      "deno.unstable"
    ],
    "jsx": "react"
  },
  "lint": {
    "exclude": ["build"]
  },
  "fmt": {
    "exclude": ["README.md", "build"],
    "singleQuote": true
  },
  "tasks": {
    "dev": "export DENO_FLAGS=--watch ; deno task init-build ; deno task bundle-css & deno task fmt & deno task bundle-js & deno task bundle-worker & deno task serve-build",
    "fmt": "deno fmt $DENO_FLAGS",
    "lint": "deno lint $DENO_FLAGS",
    "init-build": "mkdir -p static/build/",
    "bundle-css": "deno run --allow-all npm:tailwindcss --input main.css --output static/build/main.css $DENO_FLAGS",
    "bundle-js": "deno bundle $DENO_FLAGS --check app.tsx static/build/index.js",
    "bundle-worker": "deno bundle $DENO_FLAGS --check ../scaffold/src/worker/worker.ts static/build/worker.js",
    "serve-build": "deno run --allow-net --allow-read https://deno.land/std@0.212.0/http/file_server.ts static/ --port 17542 --header 'Cross-Origin-Opener-Policy: same-origin' --header 'Cross-Origin-Embedder-Policy: credentialless'"
  },
  "imports": {
    "_scaffold/": "https://raw.githubusercontent.com/scaffold/scaffold/main/",
    "scaffold/": "../scaffold/",

    "$std/": "https://deno.land/std@0.212.0/",
    "react": "https://esm.sh/react@18.2.0?target=esnext&pin=v135",
    "react-dom": "https://esm.sh/react-dom@18.2.0?target=esnext&pin=v135",
    "react-server": "https://esm.sh/react-dom@18.2.0/server?target=esnext&pin=v135",
    "react-router-dom": "https://esm.sh/react-router-dom@6.4.4?target=esnext&pin=v135",
    "react-icons/bs": "https://esm.sh/react-icons@4.10.1/bs?target=esnext&pin=v135",
    "tailwindcss": "https://esm.sh/tailwindcss@3.4.1?target=esnext&pin=v135",
    "tanstack-virtual": "https://esm.sh/@tanstack/react-virtual@3.0.0-alpha.0?target=esnext&pin=v135",
    "tanstack-table": "https://esm.sh/@tanstack/react-table@8.9.3?target=esnext&pin=v135",
    "threejs": "https://esm.sh/three@r139?target=esnext&pin=v135",
    "regl": "https://esm.sh/regl@2.1.0?target=esnext&pin=v135",
    "react-regl": "https://esm.sh/react-regl@4.3.5?target=esnext&pin=v135",
    "gl-matrix": "https://esm.sh/gl-matrix@3.4.1?target=esnext&pin=v135",
    "bunny": "https://esm.sh/bunny@1.0.1?target=esnext&pin=v135",
    "angle-normals": "https://esm.sh/angle-normals@1.0.0?target=esnext&pin=v135"
  }
}
